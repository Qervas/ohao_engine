; OHAO Engine Editor
; Uses Godot as UI shell with OHAO Vulkan renderer and physics

[application]
config/name="OHAO Engine"
config/description="Vulkan-based game engine with custom physics"
run/main_scene="res://scenes/main.tscn"
config/features=PackedStringArray("4.3", "Forward Plus")

[display]
window/size/viewport_width=1920
window/size/viewport_height=1080

[editor_plugins]
enabled=PackedStringArray()

[physics]
; Disable Godot's physics - we use OHAO physics
3d/run_on_separate_thread=false

[rendering]
; We use our own Vulkan renderer via OhaoViewport
renderer/rendering_method="forward_plus"
